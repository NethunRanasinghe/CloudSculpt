<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="98" d:DesignHeight="50"
             x:Class="CloudSculpt.Views.ServiceElementTemplateView"
             Height="50" Width="98">
    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Image Source="../Assets/dockerBlack.png" 
                   Width="35"
                   Height="35"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   x:Name="ServiceElementTemplateImage"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <TextBlock Text="Default"
                       Foreground="Black"
                       FontFamily="Inter"
                       FontSize="13"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       x:Name="ServiceElementTemplateTextBlock"/>
        </Grid>
    </Grid>
</UserControl>
