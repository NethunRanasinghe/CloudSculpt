<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="clr-namespace:CloudSculpt.Behaviors"
        xmlns:viewModels="clr-namespace:CloudSculpt.ViewModels"
        xmlns:converters="clr-namespace:CloudSculpt.Converters"
        mc:Ignorable="d" d:DesignWidth="512" d:DesignHeight="512"
        MinWidth="512" MinHeight="512"
        Width="512" Height="512"
        Background="{DynamicResource BackgroundFirstLayer}"
        x:Class="CloudSculpt.Views.Windows.ConfigCloudInfraEditWindow"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        SystemDecorations="BorderOnly"
        x:DataType="viewModels:ConfigCloudInfraEditViewModel">
    
    <Window.Resources>
        <converters:ConfigCloudInfraEditButtonOpacity x:Key="ConfigCloudInfraEditButtonOpacity"/>
    </Window.Resources>
    
    <Interaction.Behaviors>
        <EventTriggerBehavior EventName="PointerPressed">
            <behaviors:PointerPressedCommandBehavior Command="{Binding ConfigCloudInfraEditWindowPointerPressedCommand}"/>
        </EventTriggerBehavior>
    </Interaction.Behaviors>
    
        <Grid>
            <Grid.RowDefinitions>
                    <RowDefinition Height=".2*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0"
                        Background="{DynamicResource BackgroundSecondLayer}"
                        Margin="10"
                        CornerRadius="20">
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    
                        <Button Grid.Column="0"
                                HorizontalAlignment="Center"
                                Content="Terminal"
                                FontWeight="SemiBold"
                                FontFamily="Inter"
                                Background="{DynamicResource BackgroundThirdLayer}"
                                Foreground="{DynamicResource ForegroundBrush}"
                                FontSize="18"
                                CornerRadius="13"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Height="40"
                                Width="220"
                                Opacity="{Binding TerminalButtonSelected, Converter={StaticResource ConfigCloudInfraEditButtonOpacity}}"
                                Cursor="Hand"
                                Command="{Binding ConfigCloudInfraEditWindowTerminalCommand}"/>
                    
                        <Button Grid.Column="1"
                                HorizontalAlignment="Center"
                                Content="Config"
                                FontWeight="SemiBold"
                                FontFamily="Inter"
                                Background="{DynamicResource BackgroundThirdLayer}"
                                Foreground="{DynamicResource ForegroundBrush}"
                                FontSize="18"
                                CornerRadius="13"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Height="40"
                                Width="220"
                                Opacity="{Binding ConfigButtonSelected, Converter={StaticResource ConfigCloudInfraEditButtonOpacity}}"
                                Cursor="Hand"
                                Command="{Binding ConfigCloudInfraEditWindowConfigCommand}"/>
                    </Grid>
                </Border>
                
                <Border Grid.Row="1"
                        Background="{DynamicResource BackgroundSecondLayer}"
                        Margin="10"
                        CornerRadius="20">
                    
                    <ContentControl Content="{Binding ConfigCloudInfraEditCurrentView}"/>
                    
                </Border>
            </Grid>
</Window>
